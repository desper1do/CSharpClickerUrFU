@model CSharpClicker.ViewModels.LeaderboardViewModel

@{
    ViewBag.Title = "Таблица лидеров";
    // Вычисляем стартовый ранг (место) для текущей страницы
    var startRank = (Model.CurrentPage - 1) * 10 + 1;
}

<div class="container mt-5">
    <div class="card p-4 shadow-sm" style="background-color: lightblue;">
        <h2 class="text-center mb-4">ТОП ИГРОКОВ</h2>

        <div class="d-flex justify-content-between mb-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Назад к кликеру</a>
        </div>

        <table class="table table-striped table-hover bg-white rounded">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Игрок</th>
                    <th scope="col">Текущее золото</th>
                    <th scope="col">Рекорд</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <th scope="row">@(startRank++)</th>
                        <td>@user.UserName</td>
                        <td>@user.CurrentScore.ToString("N0")</td>
                        <td>@user.RecordScore.ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Leaderboard" asp-route-page="@(Model.CurrentPage - 1)">Назад</a>
                </li>

                <li class="page-item disabled">
                    <span class="page-link">Страница @Model.CurrentPage из @Model.TotalPages</span>
                </li>

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Leaderboard" asp-route-page="@(Model.CurrentPage + 1)">Вперед</a>
                </li>
            </ul>
        </nav>
    </div>
</div>